<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Quản lý nhà hàng | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Scripts/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    @RenderSection("cssSection", required: false)
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <a href="@Url.Action("index", "Customer")" class="navbar-brand">
                    <img src="~/Content/logo.jpg" alt="" class="brand-image img-circle elevation-3"
                         style="opacity: .8">
                    <span class="brand-text font-weight-light">TOKYO RESTAURANT</span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    @*<ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="index3.html" class="nav-link">Đặt bàn</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Đánh giá</a>
                            </li>
                        </ul>*@
                </div>

                <!-- Right navbar links -->
                <div class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <!-- SEARCH FORM -->
                    <div class="form-inline ml-0 ml-md-3">
                        <div class="input-group input-group-sm">
                            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-navbar" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content-header">

            </div>
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    @{
                        if (@TempData["ErrorMessage"] as IList<string> != null)
                        {
                            foreach (string item in @TempData["ErrorMessage"] as IList<string>)
                            {
                                <p class="text-red">@item</p>
                            }
                        }
                    }
                    @RenderBody()
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer bg-gradient-gray">
            <div class="row row-cols-3">
                <div class="col-sm-3">
                    <p class="d-flex flex-column text-left">
                        <span class="font-weight-bold">
                            <i class="fas fa-phone text-dark"></i> Số điện thoại
                        </span>
                        <span class="text-white">+84 911 228 224</span>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p class="d-flex flex-column text-left">
                        <span class="font-weight-bold">
                            <i class="fas fa-map-marked text-dark"></i> Địa chỉ
                        </span>
                        <span class="text-white">Số 47 đường cách mạng tháng tám, tp Thái Nguyên</span>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p class="d-flex flex-column text-left">
                        <span class="font-weight-bold">
                            <i class="fas fa-facebook-f text-dark"></i> Fanpage
                        </span>
                        <span class="text-white">fb.com/Nhà-Hàng-Ẩm-Thực-Nhật-Bản-TOKYO-222821418197637</span>
                    </p>
                </div>
                <div class="col-sm-3">
                    <p class="d-flex flex-column text-left">
                        <span class="font-weight-bold">
                            <i class="fas fa-envelope text-dark"></i> Email
                        </span>
                        <span class="text-white">TOKYO_RESTAURANT@HOTMAIL.COM</span>
                    </p>
                </div>
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Scripts/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/dist/js/adminlte.min.js"></script>
    @RenderSection("dataSection", required: false)
</body>

</html>
