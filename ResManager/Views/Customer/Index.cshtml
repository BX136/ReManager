@model IEnumerable<ResManager.DAO.Databases.C01_Mon>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@section cssSection{
    <!-- DataTables -->
}
<div class="row">
    <div class="col">
        <div class="card">
            <div id="carouselExampleIndicators" class="carousel slide text-center" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/3.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/4.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/5.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card card-widget card-default">
                <div class="card-header">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.TenMon)</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                    </div>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <a href="@Url.Action("DanhGia","Customer", new { id = item.Id })">
                        <img class="img-fluid pad" src="~/Content/default.jpg" alt="Photo">
                    </a>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="description-block row">
                                <h5 class="description-header">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c0}", Math.Round(item.DonGia.Value, 0))</h5>
                            </div>
                        </div>
                    </div>
                    <div class="card-text">
                        @item.GhiChu
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<!-- /.row -->
