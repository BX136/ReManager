@model ResManager.DAO.Databases.C01_Menu

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    <div class="card">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TenMenu, "Tên menu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenMenu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenMenu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdLoaiThucDon, "Loại thực đơn", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="row">
                    <div class="col-md-10">
                        @Html.DropDownList("IdLoaiThucDon", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdLoaiThucDon, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-1">
                        @Html.ActionLink("+", "Index", "LoaiThucDon", new { }, new { Class = "btn btn-primary btn-flat" })
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-flat">Lưu thông tin</button>
            @Html.ActionLink("Hủy", "Index", new { }, new { Class = "btn btn-secondary btn-flat" })
        </div>
    </div>
}
