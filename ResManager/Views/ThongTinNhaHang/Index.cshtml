
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "ThongTinNhaHang", FormMethod.Post))
{
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <!-- text input -->
            <div class="form-group">
                <label>Tên nhà hàng</label>
                <input name="txtTenNhaHang" type="text" class="form-control" placeholder="Enter ..." value="@ViewBag.TenNhaHang">
            </div>
            <p class="text-red">*Chú ý: Không nhập quá 128 ký tự</p>
            <!-- textarea -->
            <div class="form-group">
                <label>Thông tin mô tả</label>
                <textarea name="txtThongTinMoTa" class="form-control" rows="3" placeholder="Enter ...">@ViewBag.ThongTinMoTa</textarea>
            </div>
            <p class="text-red">*Chú ý: Không nhập quá 256 ký tự</p>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-flat">Lưu thông tin</button>
        </div>
    </div>
}